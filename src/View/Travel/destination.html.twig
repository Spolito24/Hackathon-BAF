{% extends 'layout.html.twig' %}
{% block content %}
	<div id="spinner">
						<img class="spin-size" src="/assets/images/spinner.gif">
					</div>
	<h2 class="destination-img " style="background-image: url({{travel.image}})"><p class="destination">{{ travel.country }}</p></h2>
	<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center"> 
                        <img src="/assets/images/avatar5.jpg" width="30" class="user-img rounded-circle me-2 mr-2"> 
                        <span>
                            <small class="font-weight-bold text-primary title10">Félicitation vous partez à {{ travel.city }} </small>
                            
                        </span> 
                    </div>
                </div>
                <div class="action d-flex justify-content-between mt-2 align-items-center">
                    <div class="reply px-4">
                        <small>Détails du vol</small>
                        <div class="d-flex align-items-center">
                            <h5 class="mb-0 font-weight-bold">Numéro de vol : XYZ123</h5>
                        </div>
                    </div>
                    <div class="icons align-items-center"> 
                        <i class="fa fa-check-circle-o check-icon"></i> 
                    </div>
                </div>
                <div class="action d-flex justify-content-between mt-2 align-items-center">
                    <div class="reply px-4">
                        <small>Faites vos valises et rendez-vous sur votre page "mes voyages" pour plus d'informations</small>
					<i class="bi bi-arrow-right-circle-fill ms-2 me-5 "></i>
                            <a href="/booking"class="btn-voyage">Mes Voyages</a>
                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
{% block javascript %}
<script src="/assets/js/spinner.js"></script>
{% endblock %}